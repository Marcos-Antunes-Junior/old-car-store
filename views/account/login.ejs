<section class="vh-100"  style="background-color:#d5d2d2;">
    <div class="container-fluid">
      <div class="row">
        <div class="col-sm-6 text-dark">
          <div class="d-flex align-items-center h-custom-2 px-5 ms-xl-4 mt-5 pt-5 pt-xl-0 mt-xl-n5">
      
  
            <form action="/account/login" method="post" style="width: 23rem;">
  
              <h3 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Log in</h3>
              <%- messages() %>
              <% if (errors) { %>
                <ul class="bad-notice">
                <% errors.array().forEach(error => { %>
                <li><%= error.msg %></li>
                <% })  %>
                </ul>
                <% } %>
  
              <div class="form-outline mb-4">
                <input type="email" id="accountEmail" name="account_email" class="form-control form-control-lg" required>
                <label class="form-label" for="form2Example18">Email address</label>
              </div>
  
              <div class="form-outline mb-4">
                <input type="password" id="accountPassword" name="account_password" class="form-control form-control-lg" required>
                <label class="form-label" for="form2Example28">Password</label>
              </div>
  
              <div class="pt-1 mb-4">
                <button class="btn btn-info btn-dark btn-block" type="submit">Login</button>
              </div>
              <p>Don't have an account? <a href="/account/signup" class="link-info link-dark">Register here</a></p>
  
            </form>
  
          </div>
  
        </div>
        <div class="col-sm-6 px-0 d-none d-sm-block">
          <img src="/images/login.png"
            alt="Login image" class="w-100" style="margin-top: 10%;">
        </div>
      </div>
    </div>
  </section>