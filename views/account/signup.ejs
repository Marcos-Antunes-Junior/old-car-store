<section>
    <div class="container-fluid" style="background-color:#d5d2d2;">
      <div class="row">
        <div class="col-sm-6 text-black">
          <div class="d-flex align-items-center h-custom-2 px-5 ms-xl-4 mt-5 pt-5 pt-xl-0 mt-xl-n5">
  
            <form action="/account/signup" style="width: 23rem;" method="post">
  
              <h3 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Sign Up</h3>
              <%- messages() %>
              <% if (errors) { %>
                <ul class="bad-notice">
                <% errors.array().forEach(error => { %>
                <li><%= error.msg %></li>
                <% })  %>
                </ul>
                <% } %>
              <div class="form-outline mb-4">
                <input type="text" name="account_firstname" id="accountFirstname" class="form-control form-control-lg" required value="<%= locals.account_firstname %>">
                <label class="form-label" for="form2Example18">First name</label>
              </div>


              <div class="form-outline mb-4">
                <input type="text" name="account_lastname" id="accountLastname" class="form-control form-control-lg" required value="<%= locals.account_lastname %>">
                <label class="form-label" for="form2Example18">Last Name</label>
              </div>
   
              <div class="form-outline mb-4">
                <input type="email" name="account_email" id="accountEmail" class="form-control form-control-lg" required value="<%= locals.account_email %>">
                <label class="form-label" for="form2Example18">Email address</label>
              </div>
  
              <div class="form-outline mb-4">
                <input type="password" name="account_password" id="accountPassword" class="form-control form-control-lg" pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{8,16}$" required>
                <label class="form-label" for="form2Example28">Password</label>
                <i class='fa fa-eye-slash' id="togglePassword" style="cursor: pointer;"></i>
                <p style="color: red">8 characters min (16 max); Must have: a number, lowercase letter, capital letter, and non-alphanumeric character.</p>
              </div>

              <div class="pt-1 mb-4">
                <button class="btn btn-info btn-dark btn-block" type="submit">Register</button>
              </div>
  
            </form>
  
          </div>
  
        </div>
        <div class="col-sm-6 px-0 d-none d-sm-block">
          <img src="/images/register.png"
            alt="Login image" class="w-100" style="margin-top: 20%;">
        </div>
      </div>
    </div>
  </section>
  <script>
  const togglePassword = document.querySelector('#togglePassword');
  const password = document.querySelector('#accountPassword');
  togglePassword.addEventListener('click', () => {
    const type = password.getAttribute('type') === 'password' ? 'text' : 'password';
    password.setAttribute('type', type);
    togglePassword.classList.toggle('fa-eye')
    
    togglePassword.classList.toggle('fa-eye-slash')
  })

  </script>