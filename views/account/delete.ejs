<section class="vh-100"  style="background-color:#d5d2d2;">
    <div class="container-fluid">
      <div class="row">
        <div class="col-sm-6 text-dark">
          <div class="d-flex align-items-center h-custom-2 px-5 ms-xl-4 mt-5 pt-5 pt-xl-0 mt-xl-n5">
      
  
            <form action="/account/confirm" method="post" style="width: 23rem;">
  
              <h3 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Delete Account</h3>
              <%- messages() %>
              <% if (errors) { %>
                <ul class="bad-notice">
                <% errors.array().forEach(error => { %>
                <li><%= error.msg %></li>
                <% })  %>
                </ul>
                <% } %>
            <div class="pt-1 mb-4">
            <h4 class="fw-normal mb-3 pb-3">Click on "Confirm" to delete your account.</h4>  
            
                <input type="hidden" name="account_id" class="form-control form-control-lg" required value="<%= locals.accountData.account_id %>">
              <div class="pt-1 mb-4">
                <button class="btn btn-info btn-dark btn-block" type="submit">Confirm</button>
              </div>  
            </div>       
  
            </form>
  
          </div>
  
        </div>
        <div class="col-sm-6 px-0 d-none d-sm-block">
          <img src="/images/delete.png"
            alt="Login image" class="w-100" >
        </div>
      </div>
    </div>
  </section>
 