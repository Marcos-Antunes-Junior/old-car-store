<section>
    <div class="container-fluid" style="background-color:#d5d2d2;">
      <div class="row">
        <div class="col-sm-6 text-black">
          <div class="d-flex align-items-center h-custom-2 px-5 ms-xl-4 mt-5 pt-5 pt-xl-0 mt-xl-n5">
  
            <form id="editAccount" action="/account/update"  method="post" style="width: 23rem;">
  
              <h3 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Edit Account</h3>
              <%- messages() %>
              <% if (errors) { %>
                <ul class="bad-notice">
                <% errors.array().forEach(error => { %>
                <li><%= error.msg %></li>
                <% })  %>
                </ul>
                <% } %>
              <div class="form-outline mb-4">
                <input type="text" name="account_firstname" id="accountFirstname" class="form-control form-control-lg" required value="<%= locals.accountData.account_firstname %>">
                <label class="form-label" for="form2Example18">First name</label>
              </div>


              <div class="form-outline mb-4">
                <input type="text" name="account_lastname" id="accountLastname" class="form-control form-control-lg" required value="<%= locals.accountData.account_lastname %>">
                <label class="form-label" for="form2Example18">Last Name</label>
              </div>
   
              <div class="form-outline mb-4">
                <input type="email" name="account_email" id="accountEmail" class="form-control form-control-lg" required value="<%= locals.accountData.account_email %>">
                <label class="form-label" for="form2Example18">Email address</label>
              </div>
              <input type="hidden" name="account_id" class="form-control form-control-lg" required value="<%= locals.accountData.account_id %>">
              <div class="pt-1 mb-4">
                <button id="editButton" class="btn btn-info btn-dark btn-block" type="submit" disabled>Save Changes</button>
              </div>
  
            </form>
  
          </div>
  
        </div>
        <div class="col-sm-6 px-0 d-none d-sm-block">
          <img src="/images/register.png"
            alt="Login image" class="w-100" style="margin-top: 20%;">
        </div>
      </div>
    </div>
  </section>
  <script>
const form = document.querySelector("#editAccount")
    form.addEventListener("change", function () {
      const updateBtn = document.querySelector("#editButton")
      updateBtn.removeAttribute("disabled")
    })

  </script>